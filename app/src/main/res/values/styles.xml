<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="leftImage">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
    </style>
    <!--定位的Dialog-->
    <style name="bk_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--PopupWindow出现的动画-->
    <style name="Animation">
        <item name="android:windowEnterAnimation">@anim/pop_show</item>
        <item name="android:windowExitAnimation">@anim/pop_dismis</item>
    </style>
    <!--选择照片的popwindow动画-->
    <style name="pictire_pop_andimal"
        >
        <item name="android:windowEnterAnimation">@anim/top_pop_picture__select</item>
        <item name="android:windowExitAnimation">@anim/bootom_pop_picture__select</item>
    </style>

</resources>
