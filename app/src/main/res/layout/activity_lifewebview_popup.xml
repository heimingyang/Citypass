<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <RelativeLayout
        android:id="@+id/Popup_ShouYe"
        android:layout_width="150dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/popup_houses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/ccoo_icon_main" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/popup_houses"
            android:text="首页"
            android:textSize="18dp" />
    </RelativeLayout>
<TextView
    android:background="@color/line"
    android:layout_width="match_parent"
    android:layout_height="0.5dp" />

    <RelativeLayout
        android:id="@+id/Popup_ShuaXin"
        android:layout_width="150dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/mpopup_shua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/huan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/mpopup_shua"
            android:text="刷新"
            android:textSize="18dp" />

    </RelativeLayout>
    <TextView
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

    <RelativeLayout
        android:id="@+id/Popup_Share"
        android:layout_width="150dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/mpopup_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/ccoo_icon_share3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/mpopup_share"
            android:text="分享"
            android:textSize="18dp" />

    </RelativeLayout>
    <TextView
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
</LinearLayout>