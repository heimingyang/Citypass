<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/shopping_Relative"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF0000"
        >
        <ImageView
            android:id="@+id/shopping_back"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/ic_browser_back_normal"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:text="城市币商城"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/shopping_Linear"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_height="60dp">
        <RelativeLayout
            android:id="@+id/shopping_Linear_TextOne"
            android:layout_width="0dp"
            android:background="#ffffff"
            android:layout_weight="1"
            android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:textSize="18dp"
            android:text="我的兑换"
            android:drawableLeft="@drawable/bottom_person_befor"
            android:drawablePadding="5dp"
            />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/shopping_Linear_TextTwo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:layout_marginLeft="1dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:text="评论晒单"
                android:drawableLeft="@drawable/mall_camera1"
                android:drawablePadding="5dp"
                />
        </RelativeLayout>
    </LinearLayout>

    <android.support.design.widget.CoordinatorLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/shopping_Relative"
        android:layout_above="@id/shopping_Linear"
        >

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.CollapsingToolbarLayout
                app:layout_scrollFlags="scroll"
                app:contentScrim="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.jude.rollviewpager.RollPagerView
                        android:id="@+id/shopping_rollpager"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"></com.jude.rollviewpager.RollPagerView>
                    <RelativeLayout
                        android:id="@+id/shopping_RelativeOne"
                        android:layout_width="match_parent"
                        android:layout_below="@id/shopping_rollpager"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/shopping_guangbo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textColor="#000000"
                            android:padding="5dp"
                            android:gravity="center_vertical"
                            android:drawableLeft="@drawable/ccoo_icon_guangbo"/>
                        <TextView
                            android:id="@+id/shopping_paihang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_alignParentRight="true"
                            android:textColor="#053fff"
                            android:textSize="12dp"
                            android:layout_marginRight="10dp"
                            android:layout_centerVertical="true"
                            android:text="消费排行榜"/>
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/shopping_tuijian"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:background="#aac1baba"
                        android:layout_below="@id/shopping_RelativeOne"
                        android:textSize="15dp"
                        android:text="推荐商品"
                        android:drawablePadding="5dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:drawableLeft="@drawable/title_shu"/>
                    <com.example.citypass.view.Mylistview
                        android:id="@+id/shopping_tuijian_list"
                        android:layout_below="@id/shopping_tuijian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></com.example.citypass.view.Mylistview>
                    <TextView
                        android:id="@+id/shopping_all"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:background="#aac1baba"
                        android:layout_marginTop="1dp"
                        android:layout_below="@id/shopping_tuijian_list"
                        android:textSize="15dp"
                        android:text="全部商品"
                        android:drawablePadding="5dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:drawableLeft="@drawable/title_shu"/>
                </RelativeLayout>

            </android.support.design.widget.CollapsingToolbarLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioGroup
                    android:id="@+id/shopping_RadioGroup"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/shopping_ButtonOne"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:textSize="15dp"
                        android:text="综合"
                        android:checked="true"
                        android:padding="5dp"
                        android:gravity="center"
                        android:drawableRight="@drawable/task_arrow1"
                        android:drawablePadding="10dp"
                        android:textColor="@color/mail_selector"/>
                    <RadioButton
                        android:id="@+id/shopping_ButtonTwo"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:textSize="15dp"
                        android:text="销量"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textColor="@color/mail_selector"/>
                    <RadioButton
                        android:id="@+id/shopping_ButtonThree"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:textSize="15dp"
                        android:text="价格"
                        android:padding="5dp"
                        android:gravity="center"
                        android:drawableRight="@drawable/xlistview_arrow"
                        android:drawablePadding="10dp"
                        android:textColor="@color/mail_selector"/>
                </RadioGroup>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_below="@id/shopping_RadioGroup"
                    android:orientation="horizontal"
                    android:layout_height="2dp">
                    <TextView
                        android:id="@+id/shopping_ButtonOne_text"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        android:background="@color/viewfinder_laser"/>
                    <TextView
                        android:id="@+id/shopping_ButtonTwo_text"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:visibility="invisible"
                        android:background="@color/viewfinder_laser"/>
                    <TextView
                        android:id="@+id/shopping_ButtonThree_text"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:visibility="invisible"
                        android:background="@color/viewfinder_laser"/>
                </LinearLayout>
            </RelativeLayout>

        </android.support.design.widget.AppBarLayout>



            <android.support.v4.view.ViewPager
                android:id="@+id/shopping_Viewpager"
                android:layout_width="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_height="match_parent"></android.support.v4.view.ViewPager>


    </android.support.design.widget.CoordinatorLayout>
</RelativeLayout>