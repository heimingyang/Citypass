<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/city_Relative"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF0000">

        <ImageView
            android:id="@+id/city_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_browser_back_press" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="我的城市币"
            android:textColor="#ffffff"
            android:textSize="23dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/city_RelativeOne"
        android:layout_width="match_parent"
        android:layout_below="@id/city_Relative"
        android:background="@drawable/task_mycitymoney_top"
        android:layout_height="80dp">
        <TextView
            android:id="@+id/city_myMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="0"
            android:textColor="#ffffff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="10dp"
            android:layout_marginTop="50dp"
            android:textColor="#aaecf406"
            android:text="已有城市币"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/city_Linear"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/city_RelativeOne"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/city_Relative_Two"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/setting_selector"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#aaed0249"
                android:textSize="18dp"
                android:text="赚城市币"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="10dp"
                android:layout_marginTop="40dp"
                android:text="轻松做任务"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:src="@drawable/task_mycitymoney_pig"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/city_Relative_Three"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/setting_selector"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#aaff0004"
                android:textSize="18dp"
                android:text="积分商城"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="10dp"
                android:layout_marginTop="40dp"
                android:text="积分兑大礼"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:src="@drawable/task_mycitymoney_mall"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/city_Relative_Four"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/setting_selector"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#aa0460f5"
                android:textSize="18dp"
                android:text="城市币抽奖"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="10dp"
                android:layout_marginTop="40dp"
                android:text="天天抽大奖"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:src="@drawable/task_mycitymoney_choujiang"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/city_TextOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:background="#aacfcdcd"
        android:textColor="#aa363535"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_below="@id/city_Linear"
        android:text="城市币明细"/>
    <RelativeLayout
        android:id="@+id/city_RelativeFive"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/city_TextOne">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textSize="16dp"
            android:text="事项"/>
        <TextView
            android:id="@+id/city_TextTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:text="明细"
            android:drawableRight="@drawable/task_arrow2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:text="时间"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/city_RelativeFive"
        android:layout_centerHorizontal="true"
        android:text="没有更多内容了~"
        android:layout_marginTop="10dp"/>
</RelativeLayout>