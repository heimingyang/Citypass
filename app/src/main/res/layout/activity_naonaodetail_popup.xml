<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/Popup_Share"
        android:layout_width="150dp"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/mpopup_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@drawable/ccoo_icon_share3" />

        <TextView
            android:id="@+id/NaoNao_Popupwindow_Share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/mpopup_share"
            android:drawablePadding="10dp"
            android:text="分享"
            android:textColor="@color/tv_black"
            android:textSize="18dp" />

    </RelativeLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/line"
    />
    <RelativeLayout
        android:id="@+id/Popup_ShouCang"
        android:layout_width="150dp"
        android:layout_height="60dp">


        <ImageView
            android:id="@+id/NaoNao_popupwindow_ImageShouCang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@drawable/ccoo_icon_collect_noral" />

        <TextView
            android:id="@+id/naonao_popupwindow_shoucang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/NaoNao_popupwindow_ImageShouCang"
            android:text="我要收藏"
            android:textColor="@color/tv_black"
            android:textSize="18dp"

            />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line" />

    <RelativeLayout
        android:id="@+id/Popup_JuBao"
        android:layout_width="150dp"
        android:layout_height="60dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="15dp"
            android:layout_toRightOf="@id/mpopup_shua"
            android:drawableLeft="@drawable/ccoo_icon_jubao"
            android:drawablePadding="18dp"
            android:text="举报"
            android:textColor="@color/tv_black"
            android:textSize="18dp" />


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line" />


</LinearLayout>