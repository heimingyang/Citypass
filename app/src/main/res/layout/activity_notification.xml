<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/notification_Relative"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF0000"
        >
        <ImageView
            android:id="@+id/notification_back"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/ic_browser_back_normal"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:text="消息通知"/>
        <ImageView
            android:id="@+id/notification_imgOne"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/newsremind_maillist"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/notification_Btn_One"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/notification_Relative"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/notification_Imgs"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/newsremind_systeminfopush"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/notification_Text_One"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/notification_Imgs"
            android:textSize="17dp"
            android:text="精彩推荐"
            android:textColor="#000000"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/notification_Text_ones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/notification_Imgs"
            android:textSize="13dp"
            android:text="暂无最新内容~"
            android:textColor="#000000"
            android:layout_marginTop="42dp"/>
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/notification_Btn_Two"
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:layout_height="80dp"
        android:layout_below="@+id/notification_Btn_One"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/notification_Imgss"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/newsremind_systemnotification"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/notification_Text_Twos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/notification_Imgss"
            android:textSize="17dp"
            android:text="系统通知"
            android:textColor="#000000"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/notification_Text_twos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/notification_Imgss"
            android:textSize="13dp"
            android:text="共享您成功完成“(克制完善联系信息)任务"
            android:textColor="#000000"
            android:layout_marginTop="42dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/notification_Btn_Three"
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:layout_height="80dp"
        android:layout_below="@+id/notification_Btn_Two"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/notification_Imgsss"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/newsremin_dongtai"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/notification_Text_Threes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/notification_Imgsss"
            android:textSize="17dp"
            android:text="好友动态"
            android:textColor="#000000"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/notification_Text_threes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/notification_Imgsss"
            android:textSize="13dp"
            android:text="暂无最新好友动态"
            android:textColor="#000000"
            android:layout_marginTop="42dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/notification_Btn_Four"
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:layout_height="80dp"
        android:layout_below="@+id/notification_Btn_Three"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/notification_Imgssss"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/newsremin_dongtai"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/notification_Text_Fours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/notification_Imgssss"
            android:textSize="17dp"
            android:text="谁看过我"
            android:textColor="#000000"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/notification_Text_fours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/notification_Imgssss"
            android:textSize="13dp"
            android:text="最近暂无访客"
            android:textColor="#000000"
            android:layout_marginTop="42dp"/>
    </RelativeLayout>
</RelativeLayout>