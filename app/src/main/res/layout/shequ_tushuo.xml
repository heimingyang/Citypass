<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/TuShuoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shaitu_background"
            android:padding="5dp">

            <com.example.citypass.view.SheQuImageView
                android:id="@+id/shaitu_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                />

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/shaitu_btn"
                android:gravity="top|center"
                android:padding="5dp">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ccoo_icon_zan_2" />

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/shaitu_zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="10"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/shaitu_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shaitu_image"
                android:maxLines="2"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="呵呵哒和我说的快乐十分简单快乐复健科打飞机打飞机看电视丽枫酒店"
                android:textColor="#6F6F6F"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shaitu_content">

                <TextView
                    android:id="@+id/shaitu_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名字"
                    android:textColor="#A4A4A4"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/shaitu_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="05-12"
                    android:textColor="#D6D6D6"
                    android:textSize="12sp" />

            </RelativeLayout>


        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>