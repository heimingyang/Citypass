<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
<TextView
    android:id="@+id/msg_list_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#aaaa"
    android:textColor="#ffffff"
    android:text="6-24 11:34"
    android:padding="5dp"
    android:layout_centerHorizontal="true"
    android:layout_margin="10dp"/>
    <ImageView
        android:id="@+id/msg_list_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/newsremind_systemnotification"
        android:layout_below="@+id/msg_list_time"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp" />
    <TextView
        android:id="@+id/msg_list_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/msg_list_time"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_toRightOf="@id/msg_list_img"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp"/>
</RelativeLayout>