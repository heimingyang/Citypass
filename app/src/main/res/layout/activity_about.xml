<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/aboutwe"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/about_Relative"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF0000">

        <ImageView
            android:id="@+id/about_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_browser_back_press" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="关于我们"
            android:textColor="#ffffff"
            android:textSize="23dp" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/about_img"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/aboutwe_logo"
        android:background="@drawable/about_selector"
        android:layout_below="@id/about_Relative"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/about_img"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:text="城市通 V1.0"/>
    <TextView
        android:id="@+id/about_textThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:textSize="10dp"
        android:textColor="#aa7c7979"
        android:text="Copyright © 2016 Ccoo.cn.All Rights Reserved"/>
    <TextView
        android:id="@+id/about_textFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/about_textThree"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:textColor="#aa0371fa"
        android:text="免责声明"/>
</RelativeLayout>