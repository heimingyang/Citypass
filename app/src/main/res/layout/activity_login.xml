<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/login_bg"
    android:layout_height="match_parent">
<RelativeLayout
    android:id="@+id/login_Relative"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#e6f2ec"
    >
    <ImageView
        android:id="@+id/login_back"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:src="@drawable/ic_browser_back_normal"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="#000000"
        android:textSize="22dp"
        android:text="登录"/>
</RelativeLayout>
    <EditText
        android:id="@+id/login_username"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawableLeft="@drawable/user_login_name"
        android:gravity="center_vertical"
        android:layout_below="@id/login_Relative"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:drawablePadding="20dp"
        android:hint="用户名/手机号/邮箱"
        android:textColorHint="#b63838"
        android:layout_marginTop="35dp"/>
    <EditText
        android:id="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawableLeft="@drawable/user_login_pwd"
        android:gravity="center_vertical"
        android:layout_below="@id/login_username"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:drawablePadding="20dp"
        android:hint="输入密码"
        android:inputType="textPassword"
        android:textColorHint="#b63838" />
    <Button
        android:id="@+id/login_Btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/login_item_select"
        android:layout_below="@id/login_password"
        android:layout_margin="20dp"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:text="登       录"
        android:gravity="center"/>
    <TextView
        android:id="@+id/login_wangji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_Btn"
        android:layout_marginLeft="20dp"
        android:textSize="15dp"
        android:textColor="#f5681d"
        android:text="忘记密码？"/>
    <Button
        android:id="@+id/login_register"
        android:layout_width="100dp"
        android:layout_height="38dp"
        android:background="@drawable/tv_item_select"
        android:gravity="center"
        android:text="快速注册"
        android:layout_below="@id/login_wangji"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="#2f46f4"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/login_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@id/login_register"
        android:layout_marginTop="20dp"
        android:textSize="10dp"
        android:textColor="#c4bcbc"
        android:text="其他方式登陆"/>

    <LinearLayout
        android:id="@+id/login_Linear"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_below="@id/login_Text"
        android:layout_marginTop="10dp"
        android:weightSum="4">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:src="@drawable/share_login_duanxin"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:src="@drawable/qq_weixin"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:src="@drawable/qq_qie"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:src="@drawable/qq_weibo"
            />
    </LinearLayout>
</RelativeLayout>