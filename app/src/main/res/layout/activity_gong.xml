<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/hang_Relative"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF0000"
        >
        <ImageView
            android:id="@+id/hang_back"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/ic_browser_back_normal"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:text="消费排行榜"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/hang_Linear"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_height="60dp">
        <RelativeLayout
            android:id="@+id/hang_Linear_TextOne"
            android:layout_width="0dp"
            android:background="#ffffff"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:text="我的兑换"
                android:drawableLeft="@drawable/bottom_person_befor"
                android:drawablePadding="5dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/shopping_Linear_TextTwo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:layout_marginLeft="1dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:text="评论晒单"
                android:drawableLeft="@drawable/mall_camera1"
                android:drawablePadding="5dp"
                />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/hang_Relative"
        android:layout_above="@id/hang_Linear"
        android:layout_height="match_parent">
        
        <RadioGroup
            android:id="@+id/hang_group"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/hang_one"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:layout_height="match_parent"
                android:text="总排行"
                android:textColor="@color/mail_selector"/>
            <RadioButton
                android:id="@+id/hang_two"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:layout_height="match_parent"
                android:text="本月"
                android:textColor="@color/mail_selector"/>
            <RadioButton
                android:id="@+id/hang_three"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:layout_height="match_parent"
                android:text="上月"
                android:textColor="@color/mail_selector"/>
        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/hang_group"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/hang_one_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:visibility="visible"
                android:layout_height="match_parent"
                android:background="@color/viewfinder_laser"/>
            <TextView
                android:id="@+id/hang_two_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:layout_height="match_parent"
                android:background="@color/viewfinder_laser"/>
            <TextView
                android:id="@+id/hang_three_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:layout_height="match_parent"
                android:background="@color/viewfinder_laser"/>
        </LinearLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/hang_viewpag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/hang_group"></android.support.v4.view.ViewPager>
        
        
        </RelativeLayout>
</RelativeLayout>