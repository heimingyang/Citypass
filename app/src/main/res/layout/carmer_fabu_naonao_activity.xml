<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/mail_Relative"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF0000"
        >
        <ImageView

            android:id="@+id/carmer_fabu_naonao_cancel"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/ic_browser_back_normal"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:text="话题发布"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:id="@+id/carmer_fabu_naonao_fabu"
            android:text="发布"
            android:textColor="#fff"

            />
    </RelativeLayout>
    <HorizontalScrollView
        android:layout_below="@id/mail_Relative"
        android:id="@+id/weixin_scroovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/weixin_addLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </LinearLayout>
    </HorizontalScrollView>
    <EditText
        android:layout_below="@id/weixin_scroovie"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:gravity="top"
        android:padding="5dp"
        android:hint="此刻的想法"
        android:id="@+id/carmer_fabu_naonao_edit"
        android:background="@drawable/carmer_fabu_naonao_edit"
        />
       <RelativeLayout
           android:layout_below="@id/carmer_fabu_naonao_edit"
           android:layout_marginTop="10dp"
           android:background="#e7e4e4"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:layout_centerVertical="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="5dp"
               android:textSize="20dp"
               android:text="#热门话题"

               />
           <TextView
               android:layout_centerVertical="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="更多话题"
               android:textSize="17dp"
               android:drawableRight="@drawable/ccoo_icon_jiantou_right"
               android:layout_alignParentRight="true"
               android:layout_margin="5dp"

               />
       </RelativeLayout>

    <RelativeLayout
        android:id="@+id/hehe"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/carmer_fabu_naonao_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/cover_main_position"
            android:text="北京吉利大学"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/carmer_fabu_naonao_worry"
            android:src="@drawable/x"
            android:layout_margin="5dp"
            />
        </RelativeLayout>
       <RelativeLayout
           android:layout_margin="10dp"
           android:layout_below="@id/carmer_fabu_naonao_address"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ImageView
               android:layout_margin="5dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/carmer_fabu_naonao_emoji"
               android:src="@drawable/smile"
               />
           <ImageView
               android:layout_toRightOf="@id/carmer_fabu_naonao_emoji"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/carmer_fabu_naonao_aite"
               android:layout_margin="5dp"
               android:src="@drawable/aite"
               />
           <ImageView
               android:layout_toRightOf="@id/carmer_fabu_naonao_aite"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/carmer_fabu_naonao_yuyin"
               android:layout_margin="5dp"
               android:src="@drawable/yuyin"
               />
           <ImageView
               android:layout_margin="5dp"
               android:layout_toRightOf="@id/carmer_fabu_naonao_yuyin"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/daoju"
               android:id="@+id/carmer_fabu_naonao_collect"
               />
       </RelativeLayout>
    </RelativeLayout>
    <TextView
       android:layout_above="@id/hehe"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#cdcdcd"
        />
</RelativeLayout>
