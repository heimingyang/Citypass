<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#aad1c6c6"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/phone_Relative"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF0000"
        >
        <ImageView
            android:id="@+id/phone_back"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/ic_browser_back_normal"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:text="更换绑定"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/phone_text"
        android:layout_below="@id/phone_Relative"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center"
        android:background="#ffffff"
        android:textSize="16dp"
        android:layout_marginTop="20dp"
        android:text="温馨提示：重新绑定后，原手机号不能作为登录凭证"
        android:textColor="#aaf54702"/>

    <RelativeLayout
        android:id="@+id/phone_RelativeOne"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_below="@id/phone_text"
        android:layout_marginTop="20dp"
        android:layout_height="80dp">
        <Button
            android:id="@+id/phone_get"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="#ffffff"
            android:text="获取验证码"
            android:textSize="14dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/login_item_select"
            />
        <EditText
            android:id="@+id/phone_phonenum"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/phone_get"
            android:hint="你要绑定的手机号"
            android:gravity="left"/>
    </RelativeLayout>
    <EditText
        android:id="@+id/phone_getPhone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffffff"
        android:layout_below="@id/phone_RelativeOne"
        android:textColor="#000000"
        android:hint="请输入验证码"
        android:gravity="center_vertical"/>

    <Button
        android:id="@+id/phone_bangding"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/login_item_select"
        android:layout_below="@id/phone_getPhone"
        android:layout_margin="10dp"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:text="绑定"
        android:gravity="center"/>
</RelativeLayout>