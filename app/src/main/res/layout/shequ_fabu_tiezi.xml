<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/Fabu_Bianji"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2E2E2"
    android:orientation="vertical">
    <TextView

        android:id="@+id/release_qiangjiaodian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/tiezi_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#F03732">
        <ImageView

            android:id="@+id/Fabu_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_back_press" />

        <TextView
            android:id="@+id/Title_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帖子发布"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:layout_centerInParent="true" />


        <TextView
            android:id="@+id/Fabu_fabu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp"
            android:padding="10dp"
            android:text="发布"
            android:textColor="@color/white"
            android:textSize="22dp" />

    </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/release_xuanzebankuai"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:drawableRight="@drawable/user_set_rigth_auth"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="请选择板块"
                android:textColor="@color/color_999"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/biaotieditext"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/white"
                android:hint="标题（可选填）"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_ccc" />

            <EditText
                android:id="@+id/neirongeditext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="start"
                android:hint="内容"
                android:lines="11"
                android:padding="10dp"
                android:textSize="20dp" />

        </LinearLayout>


    <LinearLayout
        android:id="@+id/reply_bottom_location_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FaFaFa"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/locationIcon"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/ccoo_icon_loaction2" />

        <TextView
            android:id="@+id/location_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="北京市 昌平區 北七家"
            android:textColor="@color/color_999"
            android:textSize="12dp" />

        <LinearLayout
            android:id="@+id/location_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/location_quxaio"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/delete_friend" />
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1.5"
            android:padding="10dp">
            <ImageView
                android:id="@+id/xiaolian"
                android:layout_margin="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/cover_main_laugh_n"/>
            <ImageView
                android:id="@+id/xaingji"
                android:layout_margin="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/cover_main_camera_n"/>
            <ImageView
                android:id="@+id/lianxiren"
                android:layout_margin="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/reply_bottom_aite_noral"/>
            <ImageView
                android:id="@+id/toupiao"
                android:layout_margin="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/vote"/>
            <ImageView

                android:id="@+id/daoji"
                android:layout_margin="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/daoju"/>

        </LinearLayout>


    </LinearLayout>

