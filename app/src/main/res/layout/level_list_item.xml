<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/level_item_relative"
        android:layout_width="match_parent"
        android:layout_height="40dp">
    <TextView
            android:id="@+id/level_item_textOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="12dp"
            android:background="@drawable/ccoo_drawable_dengji_bg_green"
            android:layout_margin="10dp"
            android:textColor="#ffffff"
            android:text="Lv.1"/>
        <TextView
            android:id="@+id/level_item_textTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="12dp"
            android:layout_margin="10dp"
            android:textColor="#000000"
            android:text="头衔"/>
        <TextView
            android:id="@+id/level_item_textThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="12dp"
            android:layout_margin="10dp"
            android:textColor="#aaefa607"
            android:text="所需成长值"/>
    </RelativeLayout>
</RelativeLayout>