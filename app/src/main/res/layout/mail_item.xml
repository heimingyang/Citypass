<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<ImageView
    android:id="@+id/mail_item_img"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/mail_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/mail_item_img"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:text="aaaaaaaa"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/mail_item_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/mail_item_name"
        android:textColor="#ffffff"
        android:drawableLeft="@drawable/regist_woman_check"
        android:layout_marginTop="10dp"
        android:text="aaaaaaaa"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/mail_item_infor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/mail_item_img"
        android:layout_below="@id/mail_item_name"
        android:layout_marginTop="10dp"
        android:text="aaaaaaaa"
        android:textSize="15dp"/>
</RelativeLayout>