<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:id="@+id/mail_item_Relative"
    android:layout_marginTop="5dp"
    android:layout_height="wrap_content">
<ImageView
    android:id="@+id/mail_item_img"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/mail_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/mail_item_img"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:text="aaaaaaaa"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/mail_item_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/mail_item_name"
        android:textColor="@color/godblue"
        android:drawableLeft="@drawable/regist_woman_check"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="16"
        android:gravity="center"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/mail_item_infor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/mail_item_img"
        android:layout_below="@id/mail_item_name"
        android:layout_marginTop="10dp"
        android:text="aaaaaaaa"
        android:textSize="12dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/viewfinder_mask"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="18dp"
        android:textColor="#ffffff"
        android:padding="5dp"
        android:textSize="15dp"
        android:text="已关注"
        android:gravity="center"/>
</RelativeLayout>