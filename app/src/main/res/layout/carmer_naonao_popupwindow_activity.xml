<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#aa767373"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="#fff"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/carmer_naonao_popupwindow_activity_video"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小视频"
            android:textSize="18dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/carmer_naonao_popupwindow_activity_one"
        android:layout_below="@id/carmer_naonao_popupwindow_activity_video"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#eee"
        />
    <LinearLayout
        android:layout_below="@id/carmer_naonao_popupwindow_activity_one"
        android:id="@+id/carmer_naonao_popupwindow_activity_photo"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打开相册"
            android:textSize="18dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:id="@+id/carmer_naonao_popupwindow_activity_two"
        android:layout_below="@id/carmer_naonao_popupwindow_activity_photo"
        android:background="#eeeeee"
        />



    <LinearLayout
        android:layout_below="@id/carmer_naonao_popupwindow_activity_two"
        android:id="@+id/carmer_naonao_popupwindow_activity_cancel"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="18dp"
            />
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>