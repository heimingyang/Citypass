<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/xq1_give_gift"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:background="@color/xq1_gift"
        android:src="@drawable/cover_info_gift" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_toLeftOf="@id/xq1_give_gift"
        android:gravity="center_vertical"
        android:text="送个小礼物赢得对方好感~"
        android:textSize="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_below="@id/xq1_give_gift"
        android:layout_marginBottom="5dp"
        android:background="@color/back_03" />
</RelativeLayout>