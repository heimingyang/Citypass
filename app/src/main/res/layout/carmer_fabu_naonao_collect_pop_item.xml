<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:id="@+id/carmer_fabu_naonao_collect_pop_item_img"
        android:layout_margin="5dp"
        android:layout_gravity="center_vertical"
        />
    <LinearLayout
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/carmer_fabu_naonao_collect_pop_item_title"
            android:layout_margin="4dp"
            />
        <TextView
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/carmer_fabu_naonao_collect_pop_item_body"
            android:layout_margin="4dp"

            />

    </LinearLayout>
    <Button
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="#f18335"
        android:textColor="#fff"
        android:text="兑换"
        android:id="@+id/carmer_fabu_naonao_collect_pop_item_dui"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        />
</LinearLayout>