<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/shop_list_Relative"
    android:layout_height="101dp"
    >
<ImageView
    android:id="@+id/shop_list_img"
    android:layout_width="140dp"
    android:layout_height="100dp" />
    <TextView
        android:id="@+id/shop_list_textOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/viewfinder_laser"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="道具"
        android:textColor="#ffffff"
        android:padding="5dp"
        android:textSize="10dp"/>
    <TextView
        android:id="@+id/shop_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_toRightOf="@id/shop_list_img"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        android:text="鲜花"/>

    <TextView
        android:id="@+id/shop_list_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#f99d00"
        android:layout_toRightOf="@id/shop_list_img"
        android:layout_below="@id/shop_list_name"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:gravity="center"
        android:drawableLeft="@drawable/ccoo_icon_coin"
        android:drawablePadding="5dp"
        android:text="1币"/>

    <TextView
        android:id="@+id/shop_list_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/shop_list_img"
        android:layout_below="@id/shop_list_city"
        android:layout_marginTop="6dp"
        android:textSize="12dp"
        android:gravity="center"
        android:drawablePadding="5dp"
        android:text="已售出0"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="兑换"
        android:layout_marginRight="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/medal_list_shape"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aac9c7c7"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>