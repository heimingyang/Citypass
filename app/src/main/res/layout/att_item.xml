<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/att_item"
    >
    <TextView
        android:id="@+id/att_item_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/hcfmorecity"
        android:background="@drawable/news_ranking1"
        />
     <ImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/att_item_img1"
         android:layout_toRightOf="@id/att_item_tv1"
         android:layout_marginLeft="10dp"
         android:background="@drawable/news_rankings1"
         />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/att_item_img2"
        android:layout_toRightOf="@id/att_item_tv1"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/att_item_tv2"
        android:textSize="16dp"
        android:textColor="@color/viewfinder_frame"
        android:textStyle="bold"
        android:text="12300"
        android:layout_toRightOf="@id/att_item_img2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/att_item_tv3"
        android:textSize="16dp"
        android:textColor="@color/color_999"
        android:text="北京"
        android:layout_toRightOf="@id/att_item_img2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        />
    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:id="@+id/att_item_tv4"
        android:text="Lv.7"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="16dp"
        android:background="@drawable/httlevel"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/att_item_tv2"
        android:layout_marginBottom="8dp"
        />
     <TextView
       android:id="@+id/att_item_tv5"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true"
         android:layout_alignParentRight="true"
         android:layout_marginRight="10dp"
         android:text="515"
         android:textColor="@color/color_999"
         android:textSize="16dp"
         />
    <TextView
        android:id="@+id/att_item_tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/att_item_tv5"
        android:layout_alignParentRight="true"
        android:layout_marginRight="65dp"
        android:text="515"
        android:textColor="@color/color_999"
        android:textSize="16dp"
        />
      <ImageView
          android:layout_width="15dp"
          android:layout_height="15dp"
          android:id="@+id/att_item_img3"
          android:layout_marginLeft="5dp"
          android:layout_toRightOf="@id/att_item_tv4"
          android:layout_marginTop="8dp"
          />
    <ImageView
    android:layout_width="15dp"
    android:layout_height="15dp"
    android:id="@+id/att_item_img4"
    android:layout_marginLeft="5dp"
    android:layout_toRightOf="@id/att_item_img3"
    android:layout_marginTop="8dp"
    />
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/att_item_img5"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/att_item_img4"
        android:layout_marginTop="8dp"
        />
</RelativeLayout>
</RelativeLayout>