<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/hang_Relative"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF0000"
        >
        <ImageView
            android:id="@+id/hang_back"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/ic_browser_back_normal"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:text="我的兑换"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/hang_Relative"
        android:layout_height="match_parent">

        <RadioGroup
            android:id="@+id/change_group"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/change_one"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:layout_height="match_parent"
                android:text="实物道具"
                android:textColor="@color/mail_selector"/>
            <RadioButton
                android:id="@+id/change_two"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:layout_height="match_parent"
                android:text="我的道具"
                android:textColor="@color/mail_selector"/>
            <RadioButton
                android:id="@+id/change_three"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:layout_height="match_parent"
                android:text="抵用卷"
                android:textColor="@color/mail_selector"/>
            <RadioButton
                android:id="@+id/change_four"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:layout_height="match_parent"
                android:text="我的礼包"
                android:textColor="@color/mail_selector"/>
        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/change_group"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/change_one_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:visibility="visible"
                android:layout_height="match_parent"
                android:background="@color/viewfinder_laser"/>
            <TextView
                android:id="@+id/change_two_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:layout_height="match_parent"
                android:background="@color/viewfinder_laser"/>
            <TextView
                android:id="@+id/change_three_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:layout_height="match_parent"
                android:background="@color/viewfinder_laser"/>

            <TextView
                android:id="@+id/change_four_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:layout_height="match_parent"
                android:background="@color/viewfinder_laser"/>
        </LinearLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/change_viewpage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/change_group"></android.support.v4.view.ViewPager>
    </RelativeLayout>
</RelativeLayout>