<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#aaedd6d6"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/setting_Relative"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF0000">

        <ImageView
            android:id="@+id/setting_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_browser_back_press" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="设置"
            android:textColor="#ffffff"
            android:textSize="23dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/setting_name"
        android:layout_width="match_parent"
        android:layout_below="@id/setting_Relative"
        android:layout_marginTop="10dp"
        android:background="@drawable/setting_selector"
        android:layout_height="70dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="15dp"
            android:textColor="#000000"
            android:text="个人信息"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:id="@+id/setting_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_listitem_arrow_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
        <ImageView
            android:id="@+id/setting_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/login_icon_accounta"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/setting_right"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/setting_clear"
        android:layout_width="match_parent"
        android:layout_below="@id/setting_name"
        android:background="@drawable/setting_selector"
        android:layout_marginTop="11dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="清空缓存"/>
        <ImageView
            android:id="@+id/setting_imageone"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/ccoo_icon_jiantou_right"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/setting_clearTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="0.0KB"
            android:layout_toLeftOf="@id/setting_imageone"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/setting_message"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:layout_below="@id/setting_clear"
        android:background="@drawable/setting_selector"
        android:paddingRight="10dp"
        android:layout_marginTop="1dp"
        android:textSize="15dp"
        android:text="消息提醒"
        android:drawableRight="@drawable/ic_listitem_arrow_right"
        android:drawablePadding="20dp"/>
    <TextView
        android:id="@+id/setting_blacklist"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:layout_below="@id/setting_message"
        android:background="@drawable/setting_selector"
        android:paddingRight="10dp"
        android:layout_marginTop="1dp"
        android:textSize="15dp"
        android:text="黑名单管理"
        android:drawableRight="@drawable/ic_listitem_arrow_right"
        android:drawablePadding="20dp"/>
    <TextView
        android:id="@+id/setting_pwd"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:layout_below="@id/setting_blacklist"
        android:background="@drawable/setting_selector"
        android:paddingRight="10dp"
        android:layout_marginTop="1dp"
        android:textSize="15dp"
        android:text="密码修改"
        android:drawableRight="@drawable/ic_listitem_arrow_right"
        android:drawablePadding="20dp"/>
    <RelativeLayout
        android:id="@+id/setting_version"
        android:layout_width="match_parent"
        android:layout_below="@id/setting_pwd"
        android:background="@drawable/setting_selector"
        android:layout_marginTop="11dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="版本更新"/>
        <ImageView
            android:id="@+id/setting_imagetwo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/ccoo_icon_jiantou_right"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/setting_versionOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="已是最新版本V1.0"
            android:layout_toLeftOf="@id/setting_imagetwo"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/setting_suggested"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:layout_below="@id/setting_version"
        android:background="@drawable/setting_selector"
        android:paddingRight="10dp"
        android:layout_marginTop="1dp"
        android:textSize="15dp"
        android:text="建议反馈"
        android:drawableRight="@drawable/ic_listitem_arrow_right"
        android:drawablePadding="20dp"/>
    <TextView
        android:id="@+id/setting_about"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:layout_below="@id/setting_suggested"
        android:background="@drawable/setting_selector"
        android:paddingRight="10dp"
        android:layout_marginTop="1dp"
        android:textSize="15dp"
        android:text="关于我们"
        android:drawableRight="@drawable/ic_listitem_arrow_right"
        android:drawablePadding="20dp"/>
    <Button
        android:id="@+id/setting_back_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/login_item_select"
        android:layout_below="@id/setting_about"
        android:layout_margin="10dp"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:text="退出登录"
        android:gravity="center"/>
</RelativeLayout>