<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#aaedd6d6"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/modify_Relative"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF0000">

        <ImageView
            android:id="@+id/modify_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_browser_back_press" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="验证身份"
            android:textColor="#ffffff"
            android:textSize="23dp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/modify_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/modify_Relative"
        android:textColor="#aa867979"
        android:textSize="15dp"
        android:text="为了保证你的账号安全，请先验证身份，验证成功后才能进入下一步操作。"/>

       <RelativeLayout
           android:id="@+id/modify_one"
           android:layout_width="match_parent"
           android:background="#ffffff"
           android:layout_below="@id/modify_text"
           android:layout_height="60dp">
           <TextView
               android:id="@+id/modify_textOne"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:textColor="#000000"
               android:text="手机号"
               android:textSize="16dp"
               android:layout_margin="10dp"/>
           <Button
               android:id="@+id/modify_get"
               android:layout_width="100dp"
               android:layout_height="50dp"
               android:textColor="#ffffff"
               android:gravity="center"
               android:background="@drawable/login_item_select"
               android:padding="10dp"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:layout_margin="10dp"
               android:textSize="15dp"
               android:text="获取验证码"/>
           <EditText
               android:id="@+id/modify_phone"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_toRightOf="@id/modify_textOne"
               android:layout_toLeftOf="@id/modify_get"
               android:gravity="center_vertical"
               android:hint="请输入你的手机号"
               android:textSize="13dp"/>
       </RelativeLayout>
    <RelativeLayout
        android:id="@+id/modify_two"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_below="@id/modify_one"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/modify_textTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:text="验证码"
            android:textSize="16dp"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/modify_yanzheng"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/modify_textTwo"
            android:gravity="center_vertical"
            android:hint="请输入短信验证码"
            android:textSize="13dp"/>
    </RelativeLayout>

    <Button
        android:id="@+id/modify_back_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/login_item_select"
        android:layout_below="@id/modify_two"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:text="下一步"
        android:gravity="center"/>
</RelativeLayout>