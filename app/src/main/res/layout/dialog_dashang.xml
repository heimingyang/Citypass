<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/tieba_jubao_layout_ju"
    >

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/head_iv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="大王教我来巡山"
            android:textColor="@color/color_333"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="感谢您的赏脸阅读"
            android:textColor="@color/color_999"
            android:textSize="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/line" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/dialog_dashang_select"
                android:button="@null"
                android:drawableRight="@drawable/ccoo_icon_coin"
                android:gravity="center"
                android:paddingRight="40dp"
                android:text="3"
                android:textColor="@color/red" />

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/dialog_dashang_select"
                android:button="@null"
                android:drawableRight="@drawable/ccoo_icon_coin"
                android:gravity="center"
                android:paddingRight="40dp"
                android:text="5"
                android:textColor="@color/red" />

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/dialog_dashang_select"
                android:button="@null"
                android:drawableRight="@drawable/ccoo_icon_coin"
                android:gravity="center"
                android:paddingRight="40dp"
                android:text="10"
                android:textColor="@color/red" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <RadioGroup
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2">

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/dialog_dashang_select"
                    android:button="@null"
                    android:drawableRight="@drawable/ccoo_icon_coin"
                    android:gravity="center"
                    android:paddingRight="40dp"
                    android:text="15"
                    android:textColor="@color/red" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/dialog_dashang_select"
                    android:button="@null"
                    android:drawableRight="@drawable/ccoo_icon_coin"
                    android:gravity="center"
                    android:paddingRight="40dp"
                    android:text="20"
                    android:textColor="@color/red" />
            </RadioGroup>

            <EditText
                android:id="@+id/et"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/dialog_dashang_gray"
                android:digits="0123456789"
                android:gravity="center"
                android:hint="任意赏"
                android:inputType="number"
                android:maxLength="2"
                android:paddingLeft="2dp"
                android:textColor="@color/red_text"
                android:textColorHint="@color/color_ccc"
                android:textSize="22dp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="打赏后这些钱会交给作者"
        android:textColor="@color/color_ccc"
        android:textSize="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="@color/line" />

    <TextView
        android:id="@+id/dashang_Text"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/item_gridview"
        android:gravity="center"
        android:padding="10dp"
        android:text="打赏"
        android:textColor="@color/blue"
        android:textSize="20dp" />


</LinearLayout>