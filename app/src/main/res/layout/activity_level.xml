<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/level_Relative"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF0000">
        <ImageView
            android:id="@+id/level_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_browser_back_press" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="我的等级"
            android:textColor="#ffffff"
            android:textSize="23dp" />
        <TextView
            android:id="@+id/level_privilege"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:text="等级特权"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/level_RelativeTwo"
        android:layout_width="match_parent"
        android:layout_below="@+id/level_Relative"
        android:background="@drawable/task_info_top"
        android:layout_height="130dp">
        <TextView
            android:id="@+id/level_dengji"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp"
            android:textColor="#ffffff"
            android:background="@drawable/usermain_dengji_bg"
            android:text="你当前等级LV.1（新居民），成长值0点"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_centerVertical="true"
            android:background="#aafcf6d3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:weightSum="5">
        <RelativeLayout
            android:id="@+id/level_linearOne"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/level_imgOne"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/task_mylevel_head4"
                android:src="@drawable/task_mylevel_head"
                />
            <TextView
                android:id="@+id/level_textOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="Lv.1"
                android:textSize="8dp"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"/>
        </RelativeLayout>
            <RelativeLayout
            android:id="@+id/level_linearTwo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/level_imgTwo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/task_mylevel_head4"
                />
            <TextView
                android:id="@+id/level_textTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="Lv.2"
                android:textSize="8dp"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"/>
        </RelativeLayout>
            <RelativeLayout
                android:id="@+id/level_linearThree"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                >
                <ImageView
                    android:id="@+id/level_imgThree"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/task_mylevel_head4"
                    />
                <TextView
                    android:id="@+id/level_textThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="Lv.3"
                    android:textSize="8dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/level_linearFour"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                >
                <ImageView
                    android:id="@+id/level_imgFour"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/task_mylevel_head4"
                    />
                <TextView
                    android:id="@+id/level_textFour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="Lv.4"
                    android:textSize="8dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/level_linearFive"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                >
                <ImageView
                    android:id="@+id/level_imgFive"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/task_mylevel_head4"
                    />
                <TextView
                    android:id="@+id/level_textFive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="Lv.5"
                    android:textSize="8dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/level_RelativeThree"
        android:layout_width="match_parent"
        android:layout_below="@id/level_RelativeTwo"
        android:background="#aadedbdb"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:text="等级说明"
            android:textSize="16dp"
            android:textColor="#aa817f7f"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/level_RelativeFour"
        android:layout_width="match_parent"
        android:layout_below="@id/level_RelativeThree"
        android:layout_height="35dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="12dp"
            android:layout_margin="10dp"
            android:textColor="#aa817f7f"
            android:text="等级"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="12dp"
            android:layout_margin="10dp"
            android:textColor="#aa817f7f"
            android:text="头衔"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="12dp"
            android:layout_margin="10dp"
            android:textColor="#aa817f7f"
            android:text="所需成长值"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/level_List"
        android:layout_width="match_parent"
        android:layout_below="@id/level_RelativeFour"
        android:layout_height="match_parent"></ListView>
</RelativeLayout>