<?xml version="1.0" encoding="utf-8"?>
<shape
    android:shape="rectangle"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <padding
        android:bottom="1dp"
        android:left="2dp"
        android:right="0dp"
        android:top="0dp"
        ></padding>
    <!--设置圆角-->
    <corners android:radius="100dp"
        android:bottomLeftRadius="0dp"
        ></corners>

    <gradient

        android:startColor="#b1b1"
        android:endColor="#b1b1"
        android:centerColor="#b1b1"
        ></gradient>
</shape>